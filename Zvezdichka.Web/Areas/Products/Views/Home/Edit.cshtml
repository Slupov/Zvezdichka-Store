@using CloudinaryDotNet
@model Zvezdichka.Web.Areas.Products.Models.ProductEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<style>
    .img-wrapper { position: relative; }

    .img-overlay {
        position: absolute;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        text-align: center;
    }

    .img-overlay:before {
        content: ' ';
        display: block;
        /* adjust 'height' to position overlay content vertically */
        height: 50%;
    }
</style>

<h2>Edit</h2>

<h4>Product</h4>
<hr/>
<div class="row">
    <div class="col-md-8">
        <form id="editForm" asp-action="Edit" asp-route-oldName="@Model.Name" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" id="Description" name="Description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stock" class="control-label"></label>
                <input asp-for="Stock" class="form-control" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ThumbnailSource" class="control-label"></label>
                <input asp-for="ThumbnailSource" class="form-control" />
                <span asp-validation-for="ThumbnailSource" class="text-danger"></span>
            </div>

            <select asp-for="Categories" class="selectpicker" multiple title="Choose categories...">
                @foreach (var cat in Model.Categories)
                {
                    <option value="@cat">@cat</option>
                }
            </select>

            <div class="form-group">
                @* Images list *@
                <label asp-for="ImageSources" class="control-label"></label>

                <div class="row">
                    @{
                var images = @Model.ImageSources.Select(x => x.Source).ToArray();
                var cloudinaryImages = @Model.CloudinarySources.ToArray();
                    }

                    @for (int i = 0; i < @Model.ImageSources.Count; i++)
            {
                <div class="col-lg-3 col-md-4 col-xs-12 img-wrapper">
                    <img src="@images[i]" class="img-responsive" />

                    <div class="img-overlay">
                        <a class="btn btn-md btn-danger" onclick="">Remove</a>
                    </div>
                </div>
    }

                    CLOUDINARY IMAGES
                    @for (int i = 0; i < @Model.CloudinarySources.Count; i++)
            {
                <div class="col-lg-3 col-md-4 col-xs-12 img-wrapper">

                    @Html.Raw(@Model.Cloudinary
                     .Api
                     .UrlImgUp
                     .BuildImageTag(cloudinaryImages[i], new StringDictionary()
                     {
                                new KeyValuePair<string, string>("class", "img-responsive")
                     }))

                    <div class="img-overlay">
                        <a class="btn btn-md btn-danger" asp-area="Products" asp-controller="Home" asp-action="DeleteCloudinaryFileAsync" asp-route-name="@cloudinaryImages[i]">Remove</a>

                        <a class="btn btn-md btn-danger" onclick="deleteCloudinaryPhoto('@cloudinaryImages[i]')">AJAX Remove</a>
                    </div>
                </div>
    }
                </div>
                <span asp-validation-for="ImageSources" class="text-danger"></span>
            </div>

            <a href="#" id="upload_widget_opener" class="btn btn-primary">Upload multiple images</a>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {

    <script src="//widget.cloudinary.com/global/all.js" type="text/javascript"></script>

    <script>
        function deleteCloudinaryPhoto(photoId) {
            photoId = photoId.replace('/', '%2F');

            var deleteUrl = '/products/home/deletecloudinaryfileasync?name=' + photoId;

            $.ajax({
                    url: deleteUrl,
                    method: 'DELETE'
                })
                .done(function() {
                    alert('deleted');
                });
        }
    </script>
    <script type="text/javascript">
        addCkEditor("Description", "editForm");
        addMultipleUpload("upload_widget_opener", '@Model.Name');
    </script>
}